                <input type="text" placeholder="Apellido paterno" name="txtFirstName" />
                <br>
                <input type="text" placeholder="Apellido materno" name="txtLastName" />
                <br>
                <input type="text" placeholder="Correo electronico" name="txtUserName" /><br>
