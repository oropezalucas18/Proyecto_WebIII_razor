@{
    Validation.RequireField("txtName", "Name is required");
    Validation.RequireField("txtFirstName", "LastName is required");
    Validation.RequireField("txtLastName", "SecondLastName is required");
    Validation.RequireField("txtUserName", "Email is required");
    Validation.RequireField("txtPassword", "Password is required");
    Validation.RequireField("txtConfirmPassword", "ConfirmPassword is required");
    var db = Database.Open("connectionstring");
    var name = Request["txtName"];
    var lastname = Request["txtFirstName"];
    var secondlastname = Request["txtLastName"];
    var email = Request["txtUserName"];
    var password = Request["txtPassword"];
    var confirmpassword = Request["txtConfirmPassword"];
    var role='0';
    if (IsPost && Validation.IsValid())
    {
        if (email.EndsWith("@univalle.edu"))
        {
            role = 'D';
        }
        else
        {
            role = 'S';
        }
        if (password == confirmpassword)
        {
            var insertquery = @"insert into Person (FirstName, LastName, SecondLastName, Email, Password, Role)
                          Values(@0,@1,@2,@3,@4,@5)";
            db.Execute(insertquery, name, lastname, secondlastname, email, password,role);
            Response.Redirect("~/IniciarSesion");
        }
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style type="text/css">
        .body {
            background: #ffffff;
            margin: 0px;
            font-family: 'Ubuntu', sans-serif;
            background-size: 100% 110%;
        }
        .h1, h2, h3, h4, h5, h6, a {
            margin: 0;
            padding: 0;
        }
        .register {
            margin: 0 auto;
            max-width: 500px;
        }
        .register-header {
            color: #fff;
            text-align: center;
            font-size: 300%;
        }
        .register-form {
            border: .5px solid #fff;
            background: #9C114A;
            border-radius: 10px;
            box-shadow: 0px 0px 10px #000;
        }
            .register-form h3 {
                text-align: left;
                margin-left: 40px;
