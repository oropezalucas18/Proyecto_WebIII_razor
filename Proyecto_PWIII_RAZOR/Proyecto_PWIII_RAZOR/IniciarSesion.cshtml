@{
    var mensage = "";
    if (IsPost)
    {
        if (!Request.QueryString["txtEmail"].IsEmpty() && !Request.QueryString["txtPassword"].IsEmpty())
        {
            var email = Request["txtEmail"];
            var password = Request["txtPassword"];
            var db = Database.Open("connectionstring");
            var query = @"select * from Person Where Email = @0 AND Password = @1";
            var data = db.QuerySingle(query, email, password);

            if (data != null)
            {
                mensage = "usuario valido!";
                Session["iduser"] = data[0];
                Response.Redirect("~/Inicio");
            }
        }
    }
}

